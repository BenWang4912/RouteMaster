    <script src="~/Scripts/jquery-ui.js"></script>
    <script>
        alert("歡迎註冊RouteMaster");

        $(document).ready(function () {
            $("#Birthday").datepicker({ dateFormat: 'yy/mm/dd' });
        });
    </script>
</body>
</html>
