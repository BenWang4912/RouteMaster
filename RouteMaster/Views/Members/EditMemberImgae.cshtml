@model RouteMaster.Models.ViewModels.MemberImageEditVM

@{
    ViewBag.Title = "EditMemberImgae";
}

<h2>變更大頭貼</h2>


@using (Html.BeginForm("EditMemberImage", "Members", FormMethod.Post, new {enctype= "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="row">
 
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="mb-3">
        <img src="~/Uploads/@Model.Image" width="50%" />

    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
        <input type="file" name="newFacePhoto" class="form-control" />
        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
            <input type="submit" value="變更儲存" class="btn btn-danger" />
    </div>
</div>
}

<div>
    @Html.ActionLink("取消變更", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
