@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        // 監聽 Region 下拉選單的變化事件
        $('#regionDropdown').change(function () {
            // 獲取所選 Region 的 ID
            var regionId = $(this).val();

            // 清空並更新 Town 下拉選單的選項
            $('#townDropdown').empty();

            // 發送 Ajax 請求取得對應的 Town 資料
            $.getJSON("/Attractions/GetTownsByRegion", { regionId: regionId }, function (result) {
                $.each(result, function (index, item) {
                    var townOption = $('<option>').text(item.Name).val(item.Id);
                    $('#townDropdown').append(townOption);
                });
            });
        });
    });
</script>
}
