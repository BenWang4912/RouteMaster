@model RouteMaster.Models.ViewModels.AttractionImageIndexVM

@{
    ViewBag.Title = "EditImage";
}

<h2>EditImage</h2>


@using (Html.BeginForm("EditImage", "Attractions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>AttractionImageIndexVM</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    @Html.HiddenFor(model => model.AttractionId)


    <div class="mb-3">
        <img src="~/Uploads/@Model.Image" />
    </div>


    <div class="mb-3">

        <input type="file" name="file1" class="form-control" />

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="變更圖片" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
