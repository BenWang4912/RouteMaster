@model IEnumerable<RouteMaster.Models.ViewModels.AttractionImageIndexVM>

@{
    ViewBag.Title = "管理圖片";
    var attractionId = ViewBag.AttractionId;
}

<h2>管理圖片</h2>

<hr />

<div class="container mt-5">
    <div class="row row-cols-4 g-4">

        @foreach (var item in Model)
        {
            <div class="col g-3 ">
                <div class="card overflow-hidden" style="width: 18rem; ">

                    <img class="card-img-top img-fluid" src="~/Uploads/@item.Image"  style="object-fit: cover; height: 18rem">
                   
                    <div class="card-body">
                        @Html.ActionLink("變更", "EditImage", new { imageId = item.Id, attractionId = attractionId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("刪除", "DeleteImage", new { imageId = item.Id, attractionId = attractionId }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<hr />

<div class="mt-3">
    @Html.ActionLink("上傳新圖", "UploadImg", new { id = attractionId }, new { @class = "btn btn-success" })
    @Html.ActionLink("返回清單頁", "Index", new { id = "" }, new { @class = "btn btn-warning" })
</div>