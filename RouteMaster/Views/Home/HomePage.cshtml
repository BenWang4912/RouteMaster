    <script>



        // 建立一個飛機物件
        var airplane = document.querySelector('#airPlane');

        var startX = -500;
        var startY = 1000;
        airplane.style.left = startX + 'px';
        airplane.style.bottom = startY + 'px';
        airplane.style.position = 'fixed';
        airplane.classList.remove('d-none');




        airplane.style.width = '800px';
        airplane.style.height = '800px';
        airplane.style.fontSize = '800px';
        airplane.style.backgroundImage = 'url(airplane.png)'; // 飛機圖片的路徑
        airplane.style.backgroundSize = 'cover';
        document.body.appendChild(airplane);

        // 設定初始位置


        // 設定目標位置
        var targetX = window.innerWidth;
        var targetY = -1000;

        // 計算每個動畫幀的位移量
        var distanceX = targetX - startX;
        var distanceY = targetY - startY;
        var steps = 250; // 動畫的總幀數
        var stepX = distanceX / steps;
        var stepY = distanceY / steps;

        // 執行動畫
        var currentStep = 0;
        function animate() {
            if (currentStep >= steps) {
                airplane.classList.add('d-none');
                return; // 動畫結束
            }

            startX += stepX;
            startY += stepY;
            airplane.style.left = startX + 'px';
            airplane.style.top = startY + 'px';

            currentStep++;

            requestAnimationFrame(animate);
        }

        // 觸發動畫
        window.addEventListener('load', function () {
            animate();
        });
    </script>
