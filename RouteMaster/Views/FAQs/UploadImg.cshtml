@model RouteMaster.Models.ViewModels.FAQUploadImgVM

@{
    ViewBag.Title = "UploadImg";
    var parentId = ViewBag.Id;
}

<h2>新增圖片</h2>


@using (Html.BeginForm("UploadImg", "FAQs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="row">

    <div class="mb-3">
        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })

        <input type="file" name="file1" class="form-control" multiple="multiple" accept="image/*" />
        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <input type="submit" value="上傳" class="btn btn-success me-3"/>
        @Html.ActionLink("返回圖片庫", "EditImgIndex", new { id = parentId }, new { @class = "btn btn-primary" })
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
