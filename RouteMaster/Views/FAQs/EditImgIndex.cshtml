@model IEnumerable<RouteMaster.Models.ViewModels.FAQEditImgIndexVM>
@section Styles
{
    <style>
        :root {
            --gradient: linear-gradient(to left top, #DD2476 10%, #FF512F 90%) !important;
        }
        .col{
            height:26vh;
        }
        .card {
            border: 2px solid #dd2476;
            color: rgba(250, 250, 250, 0.8);
            margin-bottom: 2rem;
            height:100%;
            overflow:hidden;
            
        }
        .card:hover {
            background: #fff;
            box-shadow: 12px 15px 20px 0px rgba(46,61,73,0.15);
            border-radius: 4px;
            transition: all 0.3s ease;
        }
        .card-img {
            width: 100%;
            height: 90%;
            border-radius:0;
            overflow: hidden;
            object-fit: cover;
        }
        .card-img-top {
         height:100%;
            
        }
        
        .card .btn:hover {
            text-decoration: underline;
            background: var(--gradient) !important;
        }
    </style>
}



    
@{
    ViewBag.Title = "EditImgIndex";
    var parentId = ViewBag.Id;
}

<h2>圖片庫</h2>

<div class="container mx-auto mt-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="card-img">
                        <img src="~/Uploads/@item.Image" class="card-img-top img-fluid">
                    </div>
                    <div class="card-body mt3">

                        @Html.ActionLink("變更", "ChangeImg", new { ImgId = item.Id }, new { @class = "btn btn-warning me-2" })
                        @Html.ActionLink("刪除", "DeleteFAQImg", new { ImgId = item.Id, faqId = parentId }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("上傳新圖", "UploadImg", new { id = parentId }, new { @class = "btn btn-success ms-3" })
    @Html.ActionLink("返回清單頁", "Index", new { id = "" }, new { @class = "btn btn-outline-dark ms-2" })
</div>



