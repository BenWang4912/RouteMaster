@model IEnumerable<RouteMaster.Models.EFModels.Attraction>

@section Styles
{



    <style>
        thead {
            background-color: lightblue;
            color: black;
        }
    </style>

    <style>

        .addAttraction {
            background-color: lightcoral
        }
    </style>

}


<h2>景點一覽</h2>
<table id="attractionTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                景點種類
            </th>
            <th>
                縣市
            </th>
            <th>
                鄉鎮
            </th>
            <th>
                景點名稱
            </th>
            <th>
                詳細地址
            </th>           
            <th>
                景點介紹
            </th>       
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttractionCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
          
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
         

                <td>
                    <button class="btn btn-sm btn-primary addAttraction" data-id="@item.Id">Add</button>
                </td>
            </tr>
        }
    </tbody>
</table>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

 
}