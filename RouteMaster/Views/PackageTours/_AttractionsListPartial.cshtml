@model IEnumerable<RouteMaster.Models.EFModels.Attraction>

@section Styles
{



    <style>
        thead {
            background-color: lightblue;
            color: black;
        }
    </style>

    <style>

        .addAttraction {
            background-color: lightcoral
        }
    </style>

}


<h2>景點一覽</h2>
<table id="attractionTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttractionCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TownId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttractionCategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TownId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>

                <td>
                    <button class="btn btn-sm btn-primary addAttraction" data-id="@item.Id">Add</button>
                </td>
            </tr>
        }
    </tbody>
</table>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

 
}