@{
    ViewBag.Title = "景點標籤";
}

<h2>景點標籤</h2>

<p>
    @Html.ActionLink("新增標籤", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table  table-striped table-hover" id="tagTable">
    <thead>
        <tr>
            <th>
                標籤
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("編輯標籤", "Edit", new { id = item.Id }, new { @class = "btn-css-primary" }) |
                    @Html.ActionLink("刪除標籤", "Delete", new { id = item.Id }, new { @class = "btn-css-danger" })
                </td>
            </tr>
        }
    </tbody>
    

</table>

